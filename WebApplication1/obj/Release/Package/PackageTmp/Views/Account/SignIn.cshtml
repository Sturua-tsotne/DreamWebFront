
@{
    ViewBag.Title = "SignIn";
    ViewBag.signin = "active";
}


<div class="registration">
    <a href="/Home/Index" style="cursor:pointer;">
        <button class="grad-border close-btn">
            CLOSE
            <div class="close-btn-snt"></div>
        </button>
    </a>
   

    <div class="form">
        <h1>S I G N &nbsp &nbsp I N</h1>
        <input type="text" id="email" name="Email" placeholder="Email">
        <input type="password" id="password" name="Password" placeholder="Password">
        <p class="errormessage" id="LoginMess"></p>
        <button id="login" type="submit" class="log-in">Sign In</button><br>
        <a href="/Account/Forgot" class="forgot_pass" >Forgot Password?</a>
       
        @*<button class="fb-btn" scope="public_profile,email" onlogin="checkLoginState();">Sign in with Facebook</button>*@
        <fb:login-button class="fb-login-button" scope="public_profile,email" onlogin="checkLoginState();">
            Sign in with Facebook
        </fb:login-button>
        
        <div id="status">
        </div>
        

        @*<div id="fb-root"></div>
        <div class="fb-login-button" data-max-rows="5" data-size="medium" data-button-type="login_with" data-show-faces="true" data-auto-logout-link="true" data-use-continue-as="true"></div>*@
        <a href="/Account/Registration" class="reg-now">Register now</a>

        </div>
    
    </div>


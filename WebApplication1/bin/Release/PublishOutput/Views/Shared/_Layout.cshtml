<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	<link href="~/Content/css/style.css" rel="stylesheet" />
	<link href="~/Content/css/animation.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	<script src="~/Scripts/all.js"></script>
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDBazgfqcZNAZoTKreU84uHXyMmBVVGtQE"></script>

</head>
<body>

	<header>
		<div class="wrapper dis-flex-between">
			<div class="logo">
				<a href="/Home/Index"><img class="@ViewBag.home" src="~/Content/images/logo/logo.png"></a>
			</div>
			<nav>
				<a href="/Dreams/Index"><img class="@ViewBag.dreamsicon" src="~/Content/images/nav/nav1.png"></a>
				<a href="/Dreams/Search"><img class="@ViewBag.search" src="~/Content/images/nav/nav2.png"></a>
				<a href="/Map/Index"><img class="@ViewBag.map" src="~/Content/images/nav/nav3.png"></a>
				@if (Session["User"] == null)
				{
					<a href="/Account/SignIn"><img class="@ViewBag.signin" src="~/Content/images/nav/nav4.png"></a>
				}
				else
				{
					<a href="/User/Dreams"><img style="width:50px;" class="@ViewBag.profile" src="~/Content/images/dream-cards/bck-c.png"></a>
				}
			</nav>
		</div>

	</header>

	<div class="container body-content">
		@RenderBody()
	</div>

	<script>
		$(function () {
			$("nav img").each(function () {
				if ($(this).hasClass("active")) {
					var src = $(this).attr("src");
					var spl = src.split(".");
					$(this).attr("src", spl[0] + "-c." + spl[1])
				}
			})

			if ($(".logo img").hasClass("active")) {

				var src = $(".logo img").attr("src");
				var spl = src.split(".");
				$(".logo img").attr("src", spl[0] + "-c." + spl[1])
			}
		})
	</script>
</body>
</html>